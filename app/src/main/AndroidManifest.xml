<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vicart.pocketrecipebook">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketRecipeBook"
        android:hardwareAccelerated="true">
        <activity android:name=".controllers.ConsultaRecetas" android:exported="true" />
        <activity android:name=".controllers.Navegacion" android:exported="true" />
        <activity android:name=".controllers.RegistrarReceta" android:exported="true" />
        <activity android:name=".controllers.InfoReceta" android:exported="true" />
        <activity
            android:name=".MenuPrincipal"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>